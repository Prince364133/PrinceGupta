rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admin/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admin/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Admin collection - only admins can read/write
    match /admin/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if isAdmin();
    }
    
    // Profile - public read, admin write
    match /profile/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Education - public read, admin write
    match /education/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Skills - public read, admin write
    match /skills/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Projects - public read, admin write
    match /projects/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Startups - public read, admin write
    match /startups/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Failures - public read, admin write
    match /failures/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Experience - public read, admin write
    match /experience/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Teams - public read, admin write
    match /teams/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Media - public read, admin write
    match /media/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Social Links - public read, admin write
    match /social_links/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Forms - public create, admin read/update/delete
    match /forms/{formId} {
      allow read, update, delete: if isAdmin();
      allow create: if true;
    }
    
    // SEO Settings - public read, admin write
    match /seo_settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Analytics Events - admin only
    match /analytics_events/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Blogs - public read for published, admin write
    match /blogs/{blogId} {
      allow read: if resource.data.status == 'published' || isAdmin();
      allow write: if isAdmin();
    }
    
    // Resume - public read, admin write
    match /resume/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Testimonials - public read, admin write
    match /testimonials/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Features - public read, admin write
    match /features/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
